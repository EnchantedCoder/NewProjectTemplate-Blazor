<div class="container-lg">
	<div class="text-center my-4">
		<img src="/oops.svg" class="mw-100" width="500" alt="Oops">
	</div>

	<div class="text-center">
		<h1>Oops...</h1>
		<p class="lead">It seems something went wrong!</p>
		<HxButton Color="ThemeColor.Primary" OnClick="this.OnRecover">Go back</HxButton>
	</div>

	<HxAccordion CssClass="my-4">
		<HxAccordionItem>
			<HeaderTemplate>
				@Exception.GetType().Name: @Exception.Message
			</HeaderTemplate>
			<BodyTemplate>
				<div class="position-relative pe-4">
					<div class="position-absolute top-0 end-0">
						<HxTooltip Text="Copy to clipboard">
							<HxButton OnClick="CopyExceptionDetailsToClipboard" CssClass="text-secondary" Icon="BootstrapIcon.Clipboard" />
						</HxTooltip>
					</div>
					<code>
						<pre class="mb-0">
							@Exception.ToString()
						</pre>
					</code>
				</div>
			</BodyTemplate>
		</HxAccordionItem>
	</HxAccordion>
</div>
